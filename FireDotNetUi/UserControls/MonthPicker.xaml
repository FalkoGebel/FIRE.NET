<UserControl x:Class="FireDotNetUi.UserControls.MonthPicker"
             x:Name="MonthPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FireDotNetUi.UserControls"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="MonthPickerMonth" IsReadOnly="True" VerticalContentAlignment="Center"
                     Text="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='MMMM yyyy', ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                     Width="{Binding TextBoxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Button Content="≡" Click="Button_Click" Padding="5"/>
        </StackPanel>
        <Popup x:Name="CalendarPopup" AllowsTransparency="True" Placement="Bottom" PlacementTarget="{Binding ElementName=MonthPickerMonth}" StaysOpen="False">
            <Calendar x:Name="MonthPickerCalendar" DisplayMode="Year" DisplayModeChanged="Calendar_DisplayModeChanged" />
        </Popup>
    </Grid>
</UserControl>
